#!/usr/bin/env bash

# Update package list
apt-get update

# Install Nginx
apt-get install -y nginx

# Create a custom HTML file with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Ensure Nginx is listening on port 80 without default server configurations
cat << 'EOF' > /etc/nginx/sites-available/default
server {
    listen 80;
    listen [::]:80;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Restart Nginx to apply the changes
systemctl restart nginx

# Check if Nginx is running and reload
systemctl is-active --quiet nginx && systemctl reload nginx

# Check if Nginx is listening on port 80
netstat -tuln | grep ':80'

# Verify that Nginx serves the correct content using curl
curl -s http://localhost | grep -q "Hello World!"
