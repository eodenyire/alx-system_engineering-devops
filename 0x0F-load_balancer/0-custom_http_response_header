#!/usr/bin/env bash
# This script configures a brand new Ubuntu machine to set up Nginx with a custom HTTP header "X-Served-By" with the server hostname.

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Get the hostname
HOSTNAME=$(hostname)

# Create a test index.html and 404.html
echo "<html><body><h1>Hello, World!</h1></body></html>" | sudo tee /var/www/html/index.html
echo "<html><body><h1>404 Not Found</h1></body></html>" | sudo tee /var/www/html/404.html

# Configure Nginx to include the custom header
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    add_header X-Served-By $HOSTNAME;
}
EOL

# Reload Nginx to apply the changes
sudo systemctl reload nginx

# Output success message
echo "Nginx configured with custom header X-Served-By: $HOSTNAME"
